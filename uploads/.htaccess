# Prevent direct access to files
Options -Indexes

# Restrict access to specific file types
<FilesMatch "\.(php|php3|php4|php5|phtml|inc|pl|py|jsp|asp|htm|shtml|sh|cgi)$">
    Order Deny,Allow
    Deny from all
</FilesMatch>

# Allow access to image files
<FilesMatch "\.(jpg|jpeg|png|gif)$">
    Order Allow,Deny
    Allow from all
</FilesMatch>